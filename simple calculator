#include <iostream>
using namespace std;
int main()
{
    int operation;
    float num1,num2,result;
    cout << "Welcome, This is a Simple Caluclator. Please enter 2 Numbers \n";
    cin >>num1;
    cin >>num2;
    cout << "Choose the operation, you want to perform:\n";
    cout << "1. ADD\n2. MULTIPLY\n3. DIVIDE\n4. SUBTRACT\n";
    cin >> operation;   
    switch(operation)
    {
        case 1:        
        result = num1 + num2;
        cout << num1 << " + " << num2 << " = " << result;
        break;
        case 2:        
        result = num1 - num2;
        cout << num1 << " - " << num2 << " = " << result;
        break;        
        case 3:        
        result = num1 / num2;
        cout << num1 << " / " << num2 << " = " <<result;
        break;        
        case 4:        
        result = num1 * num2;
        cout << num1 << " * " << num2 << " = " << result;
        break;
    }
    return 0;
}
